{
	"name": "z3us",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"deploy": "turbo run deploy",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/react": "^12.1.2",
		"@testing-library/react-hooks": "^7.0.2",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^27.4.0",
		"@types/jest-axe": "^3.5.0",
		"esbuild": "^0.14.10",
		"esbuild-jest": "^0.5.0",
		"husky": "^7.0.4",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.4.7",
		"jest-axe": "^3.5.0",
		"jest-watch-typeahead": "^1.1.0",
		"lint-staged": "^12.1.3",
		"msw": "^0.36.3",
		"prettier": "^2.5.1",
		"turbo": "*"
	},
	"turbo": {
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					"dist/**",
					"storybook-static/**"
				]
			},
			"deploy": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					"out/**"
				]
			},
			"test": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					"coverage/**"
				]
			},
			"lint": {
				"outputs": []
			},
			"dev": {
				"cache": false
			}
		}
	},
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"packages/ui/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		]
	}
}
