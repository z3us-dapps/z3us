{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
		},
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "src/__test__/**/*"],
	"include": ["src"]
}
